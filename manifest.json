{
"manifest_version": 2,
"name": "Priorities first",
"description": "Don't get distracted!",
"icons":{
    "128": "ressources/logo.png"
},
"version": "1.0.0",
"browser_action": {
    "default title": "Work hard dream big",
    "default_popup": "HTML/popup.html"
},
"permissions": [
"http://*/*", "https://*'/*","tabs","cookies","*://*.google.com","storage","webrequestblocking"
],
"background": {
    "scripts":
    ["js/background.js",
    "js/storage.js"],
    "pages": ["HTML/popup.html"],
    "persistent": false
  }
}